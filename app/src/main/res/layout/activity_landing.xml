<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.murshidiinhajj.LandingActivity"
    android:orientation="vertical"
    android:background="@drawable/makkah_bg">

    <TextView
        android:id="@+id/marhaba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="مرحبًا بك!"
        android:gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="70dp"
        android:textSize="55sp"
        android:textColor="#ffffff"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/murshidBtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignTop="@+id/marhaba"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="129dp"
        android:gravity="center"
        android:text="مرشد حملة"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/or"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/murshidBtn"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:text="أو"
        android:textSize="23sp"
        android:textColor="#ffffff"/>

    <Button
        android:id="@+id/hajjBtn"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignLeft="@+id/murshidBtn"
        android:layout_alignStart="@+id/murshidBtn"
        android:layout_below="@+id/or"
        android:layout_marginTop="26dp"
        android:text="حاج"
        android:textSize="20sp" />
</RelativeLayout>
